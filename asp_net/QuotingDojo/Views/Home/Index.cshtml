@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Wlcome to QuotingDojo</h1>
    <table>
        
    <form action="/add" method="POST">
   <tr> <td><label>Your Name: </label></td>
   <td> <input type="text" name="username" /></td></tr>
       <tr> <td><label>Your Quote: </label></td>
    <td><textarea name="quote" cols="30" rows="5"></textarea></td>
     
  <tr><td>
      <input type="submit" value = "Add my quote!" /></td><td>
    <input type="submit" value = "Skip to quote!" action ="/show" />
  </td></tr>
    </form>
 </table>

</div>

<div>
    @{
        if (@ViewBag.status=="fail"){
        foreach(var error in ViewBag.errors)
            {
                if(@error.Errors.Count > 0)
                {
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
        }
    }
</div>

