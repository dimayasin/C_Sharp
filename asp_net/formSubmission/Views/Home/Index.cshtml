@{
    ViewData["Title"] = "Home Page";
}


<body>
    <h1>Enter your information</h1>
    <table>
        <form action="/add" method="POST">
        <tr><td>First Name</td> <td>
        <input type="text" name="firstName" /></td></tr>
        <tr><td>Last Name</td> <td>
        <input type="text" name="lastName" /></td></tr>
        <tr><td>Age</td> <td>
        <input type="text" name="age" size="2"/></td></tr>
        <tr><td>Email</td> <td>
        <input type="email" name="email" /></td></tr>
        <tr><td>Password</td> <td>
        <input type="password" name="password" /></td></tr>
        <tr><td></td><td>
            <input type="submit" value="Add User" />
        </td></tr>

        </form>
    </table>
<div>
    @{
        foreach(var error in @ViewBag.errors)
        {
            //If there are any errors for a field...
            if(@error.Errors.Count > 0)
            {
                // We show the first error for that field
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
    }
</div>






</body>